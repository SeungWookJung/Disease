        <!--&lt;!&ndash;<item android:state_focused="true" android:drawable="@drawable/bg_select"/>&ndash;&gt;-->
        <!--&lt;!&ndash;<item android:state_pressed="true" android:drawable="@drawable/bg_select"/>&ndash;&gt;-->
        <!--&lt;!&ndash;<item android:drawable="@drawable/bg"/>&ndash;&gt;-->
    <!--</selector>-->



</LinearLayout>